// ------------------- GLOBAL VARIABLES & HELPER FUNCTIONS -------------------
bool enableDebugLogs = true;
void logDebug(String message) {
  if (enableDebugLogs) {
    debugPrint('[DEBUG] $message');
  }
}

double platoToSG(double plato) {
  return 1 + (plato / (258.6 - ((plato / 258.2) * 227.1)));
}

double sgToPlato(double sg) {
  return (258.6 * (sg - 1)) / (1 + ((sg - 1) * 227.1 / 258.2));
}

FlutterLocalNotificationsPlugin flutterLocalNotificationsPlugin =
FlutterLocalNotificationsPlugin();

// ------------------- MAIN ENTRY -------------------
Future<void> main() async {
  WidgetsFlutterBinding.ensureInitialized();
  const AndroidInitializationSettings initializationSettingsAndroid =
  AndroidInitializationSettings('@mipmap/ic_launcher');
  const DarwinInitializationSettings initializationSettingsIOS =
  DarwinInitializationSettings(
    requestAlertPermission: true,
    requestBadgePermission: true,
    requestSoundPermission: true,
  );
  const InitializationSettings initializationSettings = InitializationSettings(
    android: initializationSettingsAndroid,
    iOS: initializationSettingsIOS,
  );
  await flutterLocalNotificationsPlugin.initialize(initializationSettings);
  runApp(const BatchApp());
}

// ------------------- NOTIFICATIONS & CALENDAR -------------------
Future<void> scheduleNotification(DateTime scheduledTime, String batch) async {
  // androidScheduleMode 파라미터 제거(최신 플러그인 기준)
  const NotificationDetails platformChannelSpecifics = NotificationDetails(
    android: AndroidNotificationDetails(
      'batch_tracker_channel',
      'Batch Tracker Notifications',
      channelDescription: 'Notifications for Batch Tracker app',
      importance: Importance.max,
      priority: Priority.high,
    ),
    iOS: DarwinNotificationDetails(),
  );

  await flutterLocalNotificationsPlugin.schedule(
    0,
    'Batch Tracker Reminder',
    'Target Plato reached for batch $batch!',
    scheduledTime,
    platformChannelSpecifics,
    payload: batch,
  );
}

Future<void> requestNotificationPermissions() async {
  if (Platform.isIOS) {
    await flutterLocalNotificationsPlugin
        .resolvePlatformSpecificImplementation<IOSFlutterLocalNotificationsPlugin>()
        ?.requestPermissions(alert: true, badge: true, sound: true);
  }
  // Android의 경우, 최신 버전에서는 별도 권한 요청 필요 없음.
}

void addToCalendar(DateTime eventTime, String batch) {
  final Event event = Event(
    title: 'Batch Tracker: Target Plato Reached',
    description: 'Target Plato reached for batch $batch',
    startDate: eventTime,
    endDate: eventTime.add(const Duration(minutes: 30)),
    iosParams: const IOSParams(reminder: Duration(minutes: 15)),
    androidParams: const AndroidParams(emailInvites: []),
  );
  Add2Calendar.addEvent2Cal(event);
}

