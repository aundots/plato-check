// ------------------- BottlingCalculatorScreen -------------------
class BottlingCalculatorScreen extends StatefulWidget {
  final List<ParsedPlatoEntry> platoList;
  final String batch;
  final Map<String, dynamic> data;
  final VoidCallback saveData;
  final bool showPlato;

  const BottlingCalculatorScreen({
    Key? key,
    required this.platoList,
    required this.batch,
    required this.data,
    required this.saveData,
    required this.showPlato,
  }) : super(key: key);

  @override
  _BottlingCalculatorScreenState createState() => _BottlingCalculatorScreenState();
}

class _BottlingCalculatorScreenState extends State<BottlingCalculatorScreen> {
  // 추가: 리마인더 체크박스의 상태를 관리하는 변수
  bool bottlingReminderSet = false;

  final TextEditingController targetCO2Controller = TextEditingController(text: "5.5");
  String bottlingRecommendation = "";
  DateTime? predictedBottlingTime;

  @override
  void initState() {
    super.initState();
    requestNotificationPermissions();
  }

  @override
  void dispose() {
    targetCO2Controller.dispose();
    super.dispose();
  }

  Map<String, double>? _fitExponentialDecayModel() {
    if (widget.platoList.length < 2) {
      logDebug('Insufficient data for exponential decay model in BottlingCalculator');
      return null;
    }
    final baseTime = widget.platoList.first.date;
    final List<double> t = [];
    final List<double> y = [];
    for (var entry in widget.platoList) {
      t.add(entry.date.difference(baseTime).inMinutes.toDouble());
      y.add(entry.value);
    }
    double X0 = y.first;
    double Xinf = 0;
    if (X0 == Xinf) {
      logDebug('X0 equals Xinf in BottlingCalculator');
      return null;
    }
    final List<double> lnTerms = [];
    final List<double> filteredT = [];
    for (int i = 0; i < t.length; i++) {
      double numerator = y[i] - Xinf;
      double denominator = X0 - Xinf;
      if (numerator > 0 && denominator > 0) {
        lnTerms.add(math.log(numerator / denominator));
        filteredT.add(t[i]);
      }
    }
    if (lnTerms.isEmpty) {
      logDebug('No valid data points for logarithmic computation in BottlingCalculator');
      return null;
    }
    double k;
    if (lnTerms.length == 1) {
      k = 0.01;
      logDebug('Using default k=0.01 in BottlingCalculator');
    } else {
      final n = filteredT.length;
      final sumT = filteredT.reduce((a, b) => a + b);
      final sumLn = lnTerms.reduce((a, b) => a + b);
      final sumT2 = filteredT.fold(0.0, (double sum, double ti) => sum + ti * ti);
      final sumTLn = filteredT.asMap().entries.fold(0.0, (double sum, MapEntry<int, double> entry) => sum + entry.value * lnTerms[entry.key]);
      final denom = n * sumT2 - sumT * sumT;
      if (denom == 0) {
        logDebug('Denominator is zero in BottlingCalculator');
        return null;
      }
      k = -(n * sumTLn - sumT * sumLn) / denom;
    }
    return {
      "X0": X0,
      "Xinf": Xinf,
      "k": k,
      "baseTime": baseTime.millisecondsSinceEpoch.toDouble(),
    };
  }

  void _calculateBottlingTime() {
    if (widget.platoList.isEmpty) {
      setState(() {
        bottlingRecommendation = "No Plato data available.";
        predictedBottlingTime = null;
      });
      return;
    }
    double currentPlato = widget.platoList.last.value;
    double targetCO2 = double.tryParse(targetCO2Controller.text) ?? 5.5;
    if (targetCO2 <= 0) {
      setState(() {
        bottlingRecommendation = "Target CO2 must be a positive number.";
        predictedBottlingTime = null;
      });
      logDebug('Invalid target CO2: $targetCO2');
      return;
    }
    const double co2PerPlato = 5.81;
    double deltaPlato = targetCO2 / co2PerPlato;
    double targetPlato = currentPlato - deltaPlato;
    if (targetPlato <= 0) {
      setState(() {
        bottlingRecommendation = "Target CO2 ($targetCO2 g/L) is too high to achieve with remaining fermentation.";
        predictedBottlingTime = null;
      });
      logDebug('Target Plato below zero: $targetPlato');
      return;
    }
    final params = _fitExponentialDecayModel();
    if (params == null) {
      setState(() {
        bottlingRecommendation = "Unable to predict bottling time due to insufficient data.";
        predictedBottlingTime = null;
      });
      return;
    }
    double X0 = params["X0"]!;
    double Xinf = params["Xinf"]!;
    double k = params["k"]!;
    double baseTimeEpoch = params["baseTime"]!;
    if (k <= 0 || X0 <= Xinf) {
      setState(() {
        bottlingRecommendation = "Invalid data for prediction.";
        predictedBottlingTime = null;
      });
      logDebug('Invalid data for prediction: k=$k, X0=$X0, Xinf=$Xinf');
      return;
    }
    final ratio = (targetPlato - Xinf) / (X0 - Xinf);
    if (ratio <= 0 || ratio.isNaN || ratio.isInfinite) {
      setState(() {
        bottlingRecommendation = "Target Plato ($targetPlato) is below the expected final value ($Xinf).";
        predictedBottlingTime = null;
      });
      logDebug('Invalid ratio in BottlingCalculator: $ratio');
      return;
    }
    double t = -1 / k * math.log(ratio);
    DateTime baseTime = DateTime.fromMillisecondsSinceEpoch(baseTimeEpoch.toInt());
    DateTime predicted = baseTime.add(Duration(minutes: t.round()));
    setState(() {
      predictedBottlingTime = predicted;
      bottlingRecommendation =
      "Bottle when ${widget.showPlato ? "Plato" : "SG"} reaches ${targetPlato.toStringAsFixed(2)} (around ${DateFormat('MM-dd HH:mm').format(predicted)}) to achieve approximately ${targetCO2.toStringAsFixed(1)} g/L of CO₂.";
    });
    logDebug('Bottling recommendation: $bottlingRecommendation');
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Bottling Calculator for ${widget.batch}'),
      ),
      body: Padding(
        padding: const EdgeInsets.all(10),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            Text(
              widget.platoList.isNotEmpty
