// ------------------- PlatoScreen -------------------
class ParsedPlatoEntry {
  final double value;
  final DateTime date;
  final String rawDate;
  ParsedPlatoEntry({
    required this.value,
    required this.date,
    required this.rawDate,
  });
}

class PlatoScreen extends StatefulWidget {
  final String batch;
  final Map<String, dynamic> data;
  final VoidCallback saveData;
  final bool showPlato;
  const PlatoScreen({
    Key? key,
    required this.batch,
    required this.data,
    required this.saveData,
    required this.showPlato,
  }) : super(key: key);

  @override
  _PlatoScreenState createState() => _PlatoScreenState();
}

class _PlatoScreenState extends State<PlatoScreen> {
  final TextEditingController platoController = TextEditingController();
  final TextEditingController attenuationController = TextEditingController();
  final TextEditingController targetPlatoController = TextEditingController();
  double? predictedFG;
  String predictionResult = "";
  DateTime? predictedTime;
  bool setReminder = false;
  List<ParsedPlatoEntry>? _cachedPlatoEntries; // 캐싱된 Plato 데이터

  @override
  void initState() {
    super.initState();
    _parsePlatoEntries();
    attenuationController.addListener(_calculatePredictedFG);
    requestNotificationPermissions();
  }

  @override
  void dispose() {
    platoController.dispose();
    attenuationController.dispose();
    targetPlatoController.dispose();
    super.dispose();
  }

  void _parsePlatoEntries() {
    final platoList = widget.data[widget.batch]['plato'] as List<dynamic>;
    final format = DateFormat('MM-dd HH:mm');
    _cachedPlatoEntries = platoList.map((entry) {
      try {
        final date = format.parse(entry['date']);
        final value = double.tryParse(entry['value']) ?? 0;
        return ParsedPlatoEntry(
          value: value,
          date: date,
          rawDate: entry['date'],
        );
      } catch (e) {
        logDebug('Error parsing Plato entry: $e');
        return ParsedPlatoEntry(
          value: 0,
          date: DateTime.now(),
          rawDate: entry['date'],
        );
      }
    }).toList();
    logDebug('Parsed ${_cachedPlatoEntries?.length} Plato entries');
  }

  double calculateABV(double currentPlato, double initialPlato) {
    final og = platoToSG(initialPlato);
    final sg = platoToSG(currentPlato);
    return (og - sg) * 131.25;
  }

  void _calculatePredictedFG() {
    if (_cachedPlatoEntries == null || _cachedPlatoEntries!.isEmpty) {
      setState(() {
        predictedFG = null;
      });
      return;
    }
    final initialPlato = _cachedPlatoEntries!.first.value;
    final attenuationPercent = double.tryParse(attenuationController.text);
    if (attenuationPercent != null) {
      setState(() {
        predictedFG = initialPlato * (1 - attenuationPercent / 100);
      });
      logDebug('Predicted FG: $predictedFG with attenuation: $attenuationPercent%');
    } else {
      setState(() {
        predictedFG = null;
      });
      logDebug('Attenuation percent is invalid');
    }
  }

  Map<String, double>? _fitExponentialDecayModel() {
    if (_cachedPlatoEntries == null || _cachedPlatoEntries!.length < 2) {
      logDebug('Insufficient data for exponential decay model');
      return null;
    }
    final baseTime = _cachedPlatoEntries!.first.date;
    final List<double> t = [];
    final List<double> y = [];
    for (var entry in _cachedPlatoEntries!) {
      t.add(entry.date.difference(baseTime).inMinutes.toDouble());
      y.add(entry.value);
    }
    double X0 = y.first;
    double Xinf = 0;
    if (X0 == Xinf) {
      logDebug('X0 equals Xinf, cannot compute decay');
      return null;
    }
    final List<double> lnTerms = [];
    final List<double> filteredT = [];
    for (int i = 0; i < t.length; i++) {
      double numerator = y[i] - Xinf;
      double denominator = X0 - Xinf;
      if (numerator > 0 && denominator > 0) {
        lnTerms.add(math.log(numerator / denominator));
        filteredT.add(t[i]);
      }
    }
    if (lnTerms.isEmpty) {
      logDebug('No valid data points for logarithmic computation');
      return null;
    }
    double k;
    if (lnTerms.length == 1) {
      k = 0.01;
      logDebug('Using default k=0.01 due to single data point');
    } else {
      final n = filteredT.length;
      final sumT = filteredT.reduce((a, b) => a + b);
      final sumLn = lnTerms.reduce((a, b) => a + b);
      final sumT2 = filteredT.fold(0.0, (double sum, double ti) => sum + ti * ti);
      final sumTLn = filteredT.asMap().entries.fold(0.0, (double sum, MapEntry<int, double> entry) => sum + entry.value * lnTerms[entry.key]);
      final denom = n * sumT2 - sumT * sumT;
      if (denom == 0) {
        logDebug('Denominator is zero in decay rate calculation');
        return null;
      }
      k = -(n * sumTLn - sumT * sumLn) / denom;
    }
    return {
      "X0": X0,
      "Xinf": Xinf,
      "k": k,
      "baseTime": baseTime.millisecondsSinceEpoch.toDouble(),
    };
  }

  void _predictTargetTime() {
    final params = _fitExponentialDecayModel();
    if (params == null) {
      setState(() {
        predictionResult =
        "Prediction unavailable due to insufficient or inconsistent data.";
        predictedTime = null;
        setReminder = false;
      });
      return;
    }
    double X0 = params["X0"]!;
    double Xinf = params["Xinf"]!;
    double k = params["k"]!;
    double baseTimeEpoch = params["baseTime"]!;
    double? target = double.tryParse(targetPlatoController.text);
    if (target == null || target <= 0) {
      setState(() {
        predictionResult = "Target value must be a positive number.";
        predictedTime = null;
        setReminder = false;
      });
      logDebug('Invalid target value: $target');
      return;
    }
    if (!widget.showPlato) {
      // SG 입력 시 SG → Plato 변환
      target = sgToPlato(target);
    }
    if (X0 <= Xinf) {
      setState(() {
        predictionResult =
        "Data does not show a decreasing trend, exponential decay model is not applicable.";
        predictedTime = null;
        setReminder = false;
      });
      logDebug('No decreasing trend: X0=$X0, Xinf=$Xinf');
      return;
    }
    if (k <= 0) {
      setState(() {
        predictionResult = "Invalid decay rate, unable to predict.";
        predictedTime = null;
        setReminder = false;
      });
      logDebug('Invalid decay rate: k=$k');
      return;
    }
    if (target >= X0) {
      setState(() {
        predictionResult =
        "Target value ($target) cannot be greater than or equal to the initial ${widget.showPlato ? "Plato" : "SG"} value ($X0).";
        predictedTime = null;
        setReminder = false;
      });
      logDebug('Target exceeds initial value: target=$target, X0=$X0');
      return;
    }
    final ratio = (target - Xinf) / (X0 - Xinf);
    if (ratio <= 0 || ratio.isNaN || ratio.isInfinite) {
      setState(() {
        predictionResult =
        "Target value ($target) is below the expected final value ($Xinf). Prediction may be inaccurate.";
      });
      logDebug('Invalid ratio: $ratio');
    }
    double t = -1 / k * math.log(ratio);
    DateTime baseTime = DateTime.fromMillisecondsSinceEpoch(baseTimeEpoch.toInt());
    DateTime predicted = baseTime.add(Duration(minutes: t.round()));
    setState(() {
      predictedTime = predicted;
      predictionResult =
      "Estimated target reached at: ${DateFormat('MM-dd HH:mm').format(predicted)}";
      setReminder = false;
    });
    logDebug('Prediction successful: $predictionResult');
  }

  void _savePlato() {
    final value = platoController.text.trim();
    if (value.isNotEmpty) {
      setState(() {
        widget.data[widget.batch]['plato'].add({
          'value': value,
          'date': DateFormat('MM-dd HH:mm').format(DateTime.now()),
        });
        _parsePlatoEntries(); // 캐시 갱신
      });
      widget.saveData();
      platoController.clear();
      _calculatePredictedFG();
      logDebug('Saved Plato value: $value');
    }
  }

  void _confirmDeletePlato(int index) {
    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: const Text('Confirm Deletion'),
        content: const Text('Are you sure you want to delete this Plato entry?'),
        actions: [
          TextButton(
              onPressed: () => Navigator.pop(context),
              child: const Text('Cancel')),
          TextButton(
              onPressed: () {
                Navigator.pop(context);
                setState(() {
                  widget.data[widget.batch]['plato'].removeAt(index);
                  _parsePlatoEntries();
                });
                widget.saveData();
                _calculatePredictedFG();
                logDebug('Deleted Plato entry at index: $index');
              },
              child: const Text('Delete')),
        ],
      ),
    );
  }

  void _editPlato(int index) {
    final valueController = TextEditingController(
      text: widget.data[widget.batch]['plato'][index]['value'],
    );
    DateTime selectedDate;
    try {
      selectedDate = DateFormat('MM-dd HH:mm')
          .parse(widget.data[widget.batch]['plato'][index]['date']);
      selectedDate = DateTime(
        DateTime.now().year,
        selectedDate.month,
        selectedDate.day,
        selectedDate.hour,
        selectedDate.minute,
      );
    } catch (e) {
